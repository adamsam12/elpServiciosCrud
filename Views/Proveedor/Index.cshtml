@model IEnumerable<CrudNet8MVC.Models.Proveedor>
@{
    ViewData["Title"] = "Lista de messages";
}

<h1 class="text-center">Nuevo Proveedor</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="Proveedor" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> new message
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>
                    Lista de Proveedores
                </strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Ruc)</th>
                                    <th>@Html.DisplayNameFor(m => m.razon_social)</th>
                                    <th>@Html.DisplayNameFor(m => m.direccion)</th>
                                    <th>@Html.DisplayNameFor(m => m.telefono)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Ruc)</td>
                                        <td>@Html.DisplayFor(m => item.razon_social)</td>
                                        <td>@Html.DisplayFor(m => item.direccion)</td>
                                        <td>@Html.DisplayFor(m => item.telefono)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
                                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalle</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-eraser" aria-hidden="true"></i> Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay proveedores</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>