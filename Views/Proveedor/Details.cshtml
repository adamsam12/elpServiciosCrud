@model CrudNet8MVC.Models.Proveedor
@{
    ViewData["Title"] = "Detalle Proveedor";
}


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle Proveedor</strong></h3>
            </div>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item"><strong>Ruc: </strong>@Html.DisplayFor(m => m.Ruc)</li>
                    <li class="list-group-item"><strong>Razon Social: </strong>@Html.DisplayFor(m => m.razon_social)</li>
                    <li class="list-group-item"><strong>Direccion: </strong>@Html.DisplayFor(m => m.direccion)</li>
                    <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(m => m.telefono)</li>
                </ul>
               

                <a asp-controller="Proveedor" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>