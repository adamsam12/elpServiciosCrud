@model CrudNet8MVC.Models.Contacto
@{
    ViewData["Title"] = "Editar Contacto";
}


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Usuario</strong></h3>
            </div>
            <div class="card-body">

                <form asp-action="Editar">

                    <!--ID del usuario como campo oculto *-->
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresa el nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" type="text" class="form-control" placeholder="Ingresa el teléfono" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" type="text" class="form-control" placeholder="Ingresa el celular" />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Ingresa el email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="fa fa-user" aria-hidden="true"></i> Editar Usuario</button>
                    </div>
                </form>

                <a asp-controller="Contact" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>

<script>
    // validamos el campo celular para que solo acepte 9 caracteres
    $(document).ready(function () {
        $("#Celular").attr("maxlength", "9");
    });
    
    
    
    
</script>