@model CrudNet8MVC.Models.Message
@{
    ViewData["Title"] = "Editar Message";
}


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Message</strong></h3>
            </div>
            <div class="card-body">

                <form asp-action="Edit">

                    <!--ID del usuario como campo oculto *-->
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <input asp-for="Text" type="text" class="form-control" placeholder="Ingresa el texto" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="text" class="form-control" placeholder="Ingresa el correo" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="fa fa-user" aria-hidden="true"></i> Editar Message</button>
                    </div>
                </form>

                <a asp-controller="Message" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>
