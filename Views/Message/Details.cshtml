@model CrudNet8MVC.Models.Message
@{
    ViewData["Title"] = "Detalle Message";
}


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle Message</strong></h3>
            </div>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Text)</li>
                    <li class="list-group-item"><strong>Teléfono: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Fecha: </strong>@Html.DisplayFor(m => m.Date)</li>
                </ul>
               

                <a asp-controller="Message" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>