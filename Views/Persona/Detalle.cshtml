@model CrudNet8MVC.Models.Persona

@{
    ViewData["Title"] = "Detalles de Persona";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Detalles de Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>

        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>

        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Model.Apellido
        </dd>

        <dt class="col-sm-2">
            Correo Electrónico
        </dt>
        <dd class="col-sm-10">
            @Model.CorreoElectronico
        </dd>

        <dt class="col-sm-2">
            Número de Teléfono
        </dt>
        <dd class="col-sm-10">
            @Model.NumeroTelefono
        </dd>

        <dt class="col-sm-2">
            Fecha de Nacimiento
        </dt>
        <dd class="col-sm-10">
            @Model.FechaNacimiento.ToString("dd/MM/yyyy")
        </dd>

        <dt class="col-sm-2">
            Dirección
        </dt>
        <dd class="col-sm-10">
            @Model.Direccion
        </dd>

        <dt class="col-sm-2">
            Edad
        </dt>
        <dd class="col-sm-10">
            @Model.CalcularEdad()
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>