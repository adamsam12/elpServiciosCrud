@model IEnumerable<CrudNet8MVC.Models.Persona>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Dashboard de Personas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Dashboard de Personas</h1>
        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-success">Agregar Nueva Persona</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo Electrónico</th>
                    <th>Número de Teléfono</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Dirección</th>
                    <th>Edad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var persona in Model)
                    {
                        <tr>
                            <td>@persona.Id</td>
                            <td>@persona.Nombre</td>
                            <td>@persona.Apellido</td>
                            <td>@persona.CorreoElectronico</td>
                            <td>@persona.NumeroTelefono</td>
                            <td>@persona.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                            <td>@persona.Direccion</td>
                            <td>@persona.CalcularEdad()</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@persona.Id" class="btn btn-info btn-sm">Detalles</a>
                                    <a asp-action="Edit" asp-route-id="@persona.Id" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@persona.Id" class="btn btn-danger btn-sm">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No hay registros disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

